<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <style>
        .login-form {
            width: 340px;
            margin: 50px auto;
            font-size: 15px;
        }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

        .form-control,
        .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="login-form">
        <form id="form">
            <h2 class="text-center"><%= signup == true ? `Sign up` : `Login` %></h2>
            <div class="form-group">
                <input type="text" class="form-control" id="username" placeholder="Username" required>
            </div>
            <%- signup == true ?
            `<div class="form-group">
                <input type="email" class="form-control" id="email" placeholder="Email" required>
            </div>` : ``
            %>
            <div class="form-group">
                <input type="password" class="form-control" id="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" id="button">
                    <%= signup != true ? `Login` : "Create" %>
                </button>
            </div>
            <div class="clearfix">
                <%- signup != true ? `<label class="float-left form-check-label">
                    <input type="checkbox"> Remember me</label>
                    <a href="#" class="float-right">Forgot Password?</a>`
                    : ``
                %>
            </div>
        </form>
        <%- signup != true ? `<p class="text-center"><a href="#">Create an Account</a></p>` : `` %>
    </div>

    <script>
        const form = document.getElementById("form");
        var codeToRun = document.getElementById("button").innerText == "Login" ? login : signup;
        form.addEventListener("submit", codeToRun)

        async function signup(event) {
            event.preventDefault();
            const email = document.getElementById("email").value;
            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;

            var options = {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({
                    email: email,
                    username: username,
                    password: password,
                })
            };
            var response = await fetch("/signup", options);
            var data = await response.json();
            if (response.status >= 400) {
                alert(data.message.charAt(0).toUpperCase() + data.message.slice(1));
                return;
            }
            window.location.href = "/";
        }
        async function login(event) {
            event.preventDefault();
            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;
            var options = {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({
                    username: username,
                    password: password,
                })
            };
            var response = await fetch("/login", options);
            var data = await response.json();
            if (response.status >= 400) {
                alert(data.message.charAt(0).toUpperCase() + data.message.slice(1));
                return;
            }
            window.location.href = "/";
        }
    </script>
</body>

</html>