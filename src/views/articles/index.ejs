<%- include("../header") %>

    <body>
        <div class="container">
            <h1 class="mb-4">Blog Articles</h1>
            <a href="/articles" class="btn btn-success">New Article</a>
            <span id="buttons">
                <a href="articles/login" class="btn btn-primary">Login</a>
                <a href="articles/signup" class="btn btn-info">Sign up</a>
            </span>
            <% articles.forEach(article=> { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= article.title %>
                        </h4>
                        <div class="card-subtitle text-muted mb-2">
                            <%= article.createdAt.toLocaleDateString() %>
                        </div>
                        <div class="card-text mb-2">
                            <%= article.description %>
                        </div>
                        <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>

                        <span id="extra-buttons">
                            <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                            <form class="d-inline" action="/articles/<%= article.id %>?_method=DELETE" method="POST">
                                <button type"submit" class="btn btn-danger">Delete</button>
                            </form>
                        </span>
                    </div>
                </div>
                <% }) %>

        </div>
    </body>
    <script>
        if (document.cookie != "") {
            document.getElementById("buttons").innerHTML = "";
            const userId = document.cookie.split(" | ")[1].split("=")[1];
            document.cookie = document.cookie.split(" | ")[0];
            sessionStorage.setItem("userId", userId)
        }
    </script>
